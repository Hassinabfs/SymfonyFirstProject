{% extends "base.html.twig" %}
{% block body %}
	<section class="produits">


		<table class="table">
			<tr>
				<th rowspan="4"><img class="image" src="------------" alt="image de produit"></th>
				<td class="titre">{{produit.nom}}</td>
			</tr>
			<tr>
				<td class="prix">{{produit.prix}}</td>
			</tr>
			<tr>
				<td>
					<hr>
					<ul *ngFor="let description of produit.description">
						<li class="desc">{{produit.description}}</li>
					</ul>
				</td>
			</tr>
		</table>


	</section>

{% endblock %}
