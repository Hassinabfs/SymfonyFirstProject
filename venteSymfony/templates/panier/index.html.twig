{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}

	{% if items | length > 0 %}

		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantite</th>

					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.produit.nom}}</td>
						<td>{{ item.produit.prix }}</td>
						<td>{{ item.quantity }}</td>
						<td>{{ item.quantity * item.produit.prix }}</td>
						<td>
							<a href="{{ path('panier_remove' ,{'id': item.produit.id})}}" class="btn btn-danger sm">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>

				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3" class="text-right">Total:</td>
					<td>{{ total }}</td>
					<td></td>
				</tr>
			</tfoot>


		</table>


	{% endif %}

{% endblock %}
